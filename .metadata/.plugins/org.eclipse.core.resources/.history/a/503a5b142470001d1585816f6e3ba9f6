import java.util.Scanner;

public class Curso_java {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int minutos;
		double valor;
		minutos = sc.nextInt();
		
		if( minutos <= 100) {
			System.out.println("Valor a pagar: R$ = 50.00");
		}
		
		else {
			valor = (minutos - 100) * 2;
			System.out.printf("Valor a pagar: R$= %2f.%n ", valor);
		}
		
		
		
		
		
		
		
		sc.close();

	}
}
